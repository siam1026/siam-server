<wxs src="../wxs/utils.wxs" module="utils" />
<wxs src="./index.wxs" module="computed" />

<view
  class="custom-class {{ utils.bem('tag', [type, size, { mark, plain, round }]) }}"
  style="{{ computed.rootStyle({ plain, color, textColor }) }}"
>
  <slot />
  <van-icon
    wx:if="{{ closeable }}"
    name="cross"
    custom-class="van-tag__close"
    bind:click="onClose"
  />
</view>
